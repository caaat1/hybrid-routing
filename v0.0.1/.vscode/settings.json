{
  "cSpell.customDictionaries": {
    "custom-dictionary-folder": {
      "addWords": true,
      "name": "custom-dictionary-folder",
      "path": "${workspaceFolder}/.cspell/custom-dictionary-folder.txt",
      "scope": "folder"
    }
  },
  "cSpell.ignoreWords": [],
  "cSpell.words": [
    "Grabbable",
    "kgolov",
    "mapbox",
    "safehandler",
    "sortkeybindings",
    "Zerkalny"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": ".", // Lint all files in the workspace
  "eslint.probe": [
    "javascript",
    "typescript"
  ], // Ensure ESLint works for JS/TS files
  "eslint.run": "onType", // Lint as you type
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "files.exclude": {
    "**/.git": false
  },
  "terminal.integrated.cwd": "${fileDirname}"
}